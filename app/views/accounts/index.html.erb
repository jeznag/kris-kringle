<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account name</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.account_name %></td>
        <td><%= account.account_id %></td>
        <td><%= link_to 'Show', account_path(id: account.account_id) %></td>
        <td><%= link_to 'Edit', edit_account_path(id: account.account_id) %></td>
        <td><%= link_to 'Destroy', account_path(id: account.account_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
